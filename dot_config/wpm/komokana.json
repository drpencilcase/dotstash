{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/wpm/refs/heads/master/schema.unit.json",
  "Unit": {
    "Name": "komokana",
    "Description": "Automatic application-aware keyboard layer switching for Windows",
    "Requires": ["komorebi", "kanata"]
  },
  "Resources": {
    "CONFIGURATION_FILE": "C:\\Users\\barbo\\.config\\komokana\\config.yaml"
  },
  "Service": {
    "Kind": "Simple",
    "ExecStart": {
      "Executable": "komokana.exe",
      "Arguments": [
        "--kanata-port",
        "4567",
        "--configuration",
        "{{ Resources.CONFIGURATION_FILE }}",
        "--default-layer",
        "main",
        "-t"
      ]
    },
    "Healthcheck": {
      "Process": {
        "DelaySec": 1
      }
    },
    "Restart": "OnFailure",
    "RestartSec": 2
  }
}
