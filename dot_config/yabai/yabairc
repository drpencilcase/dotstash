#!/usr/bin/env sh

# Minimal yabai configuration (overwrites previous)
# - default layout: bsp
# - pink border around the active window
# - reasonable defaults for padding, gaps and mouse interaction
#
# Notes:
# - On modern macOS versions the scripting addition must be loaded. To
#   allow `sudo yabai --load-sa` to run at startup without a password,
#   add an appropriate sudoers entry for your user.
# - If any config line isn't recognized, update yabai to a recent release or
#   comment out the offending line.

# --- scripting-addition (required on macOS Big Sur+ for full features) ---
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# global settings
yabai -m config                                 \
    external_bar                 main:40:0       \
    mouse_follows_focus          on            \
    focus_follows_mouse          off            \
    display_arrangement_order    default        \
    window_origin_display        default        \
    window_placement             second_child   \
    window_insertion_point       focused        \
    window_zoom_persist          on             \
    window_shadow                on             \
    window_animation_duration    0.0            \
    window_animation_easing      ease_out_circ  \
    window_opacity_duration      0.0            \
    active_window_opacity        1.0            \
    normal_window_opacity        0.93           \
    window_opacity               on             \
    insert_feedback_color        0xffd75f5f     \
    split_ratio                  0.50           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  12             \
    bottom_padding               12             \
    left_padding                 12             \
    right_padding                12             \
    window_gap                   06             \
    layout                       bsp            \
    mouse_modifier               fn             \
    mouse_action1                move           \
    mouse_action2                resize         \
    mouse_drop_action            swap

# --- apply user rules (keeps compatibility with existing rule files) ---
yabai -m rule --apply

# for sketchybar
yabai -m signal --add event=window_focused action="sketchybar --trigger window_focus"
yabai -m signal --add event=window_created action="sketchybar --trigger windows_on_spaces"
yabai -m signal --add event=window_destroyed action="sketchybar --trigger windows_on_spaces"
# --- debug (uncomment when troubleshooting) ---
# yabai -m config debug_output on

echo "yabai configuration loaded.."
